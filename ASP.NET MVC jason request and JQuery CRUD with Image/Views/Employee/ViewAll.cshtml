@model IEnumerable<ASP.NET_MVC_jason_request_and_JQuery_CRUD_with_Image.Models.Employee>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<body>
    <table class="table table-striped table-condensed" id="mealTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Department)

                </th>

                
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    


                    <td>
                        <button class="btn-group-xs" onclick="Edit('@Url.Action("AddOrEdit","Employee", new { id=@item.EmployeeId})')"><i class="fas fa-pencil-alt"></i>Edit</button>
                        <button class="btn-danger" onclick="Delete('@Url.Action("Delete","Employee", new { id=@item.EmployeeId})')"><i class="fas fa-trash-alt"></i>Delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</body>

