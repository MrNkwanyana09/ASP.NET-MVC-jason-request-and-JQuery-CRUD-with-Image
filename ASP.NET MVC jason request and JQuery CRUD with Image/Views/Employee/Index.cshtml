@model ASP.NET_MVC_jason_request_and_JQuery_CRUD_with_Image.Models.Employee

@{
    ViewBag.Title = "Index";
}
<ul class="nav nav-tabs">
    <li class="nav-link active"><a data-toggle="tab" href="#firstTab"><i class="fas fa-list"></i>View All</a></li>

    <li><a data-toggle="tab" href="#secondTab"><i class="fas fa-plus"></i>Add New</a></li>


</ul>
